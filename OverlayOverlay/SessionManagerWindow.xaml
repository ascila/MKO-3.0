<Window x:Class="OverlayOverlay.SessionManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Session Manager" Width="680" Height="420" WindowStartupLocation="CenterScreen"
        PreviewKeyDown="Window_PreviewKeyDown" Loaded="Window_Loaded" Closing="Window_Closing">
  <DockPanel Margin="10">
    <UniformGrid DockPanel.Dock="Top" Rows="1" Columns="6" Margin="0,0,0,8">
      <Button Style="{StaticResource PrimaryButtonStyle}" Height="33" Click="New_Click" ToolTip="Create a new session (Ctrl+N)">New</Button>
      <Button Style="{StaticResource PrimaryButtonStyle}" x:Name="BtnLoad" Height="33" Click="Load_Click" IsEnabled="False" ToolTip="Load selected session (Enter)">Load</Button>
      <Button Style="{StaticResource PrimaryButtonStyle}" x:Name="BtnDelete" Height="33" Click="Delete_Click" IsEnabled="False" ToolTip="Delete selected session (Del)">Delete</Button>
      <Button Style="{StaticResource PrimaryButtonStyle}" x:Name="BtnRename" Height="33" Click="BtnRename_Click" IsEnabled="False" ToolTip="Rename selected session">Rename</Button>
      <Button Style="{StaticResource PrimaryButtonStyle}" x:Name="BtnDuplicate" Height="33" Click="BtnDuplicate_Click" IsEnabled="False" ToolTip="Duplicate selected session">Duplicate</Button>
      <Button Style="{StaticResource PrimaryButtonStyle}" x:Name="BtnOpenFolder" Height="33" Click="BtnOpenFolder_Click" IsEnabled="False" ToolTip="Open session folder">Open Folder</Button>
    </UniformGrid>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <ListView x:Name="SessionsList" SelectionChanged="SessionsList_SelectionChanged" MouseDoubleClick="SessionsList_MouseDoubleClick" KeyDown="SessionsList_KeyDown" ContextMenuOpening="SessionsList_ContextMenuOpening">
        <ListView.Resources>
          <Style TargetType="{x:Type GridViewColumnHeader}">
            <EventSetter Event="Click" Handler="GridViewColumnHeader_Click"/>
          </Style>
        </ListView.Resources>
        <ListView.View>
          <GridView>
            <GridViewColumn x:Name="ColName" Header="Name" Width="360" DisplayMemberBinding="{Binding Name}"/>
            <GridViewColumn x:Name="ColUpdated" Header="Updated" Width="260" DisplayMemberBinding="{Binding Updated}"/>
          </GridView>
        </ListView.View>
      </ListView>
      <TextBlock x:Name="EmptyText" Text="No sessions yet. Click New to create one." 
                 Opacity="0.7" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
  </DockPanel>
</Window>


